extends ../layouts/common.pug

block content 
    H1 ADD USER
    form(action="/users/add" method="POST")
        span    NAME
        span &nbsp    
        input(type="text" name="name" class="form-control mb-3")
        
        span   SDT
        span &nbsp    
        input(type="text" name="phone" class="form-control mb-3")
        span &nbsp
        button(class="btn btn-primary") Add
    h1  Thông Tin User

    table(class="table")
        tr
            th Name
            th SDT
        each obj in users
            tr
                td=obj.name
                    span &nbsp
                td=obj.phone
                    span &nbsp
                td
                    a(href="users/edit/" + obj.id) Sửa 
                    span &nbsp               
                td
                    a(href="users/delete/" + obj.id) Xóa 